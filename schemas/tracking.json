{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": [
        "frames"
    ],
    "properties": {
        "frames": {
            "type": "array",
            "description": "Per-frame tracking data",
            "items": {
                "type": "object",
                "required": [
                    "frame_num",
                    "timestamp",
                    "detections"
                ],
                "properties": {
                    "frame_num": {
                        "type": "integer",
                        "description": "Frame number"
                    },
                    "timestamp": {
                        "type": "number",
                        "description": "Timestamp in seconds"
                    },
                    "detections": {
                        "type": "array",
                        "description": "Detected objects/faces in this frame",
                        "items": {
                            "type": "object",
                            "required": [
                                "bbox",
                                "confidence"
                            ],
                            "properties": {
                                "bbox": {
                                    "type": "object",
                                    "required": [
                                        "x",
                                        "y",
                                        "w",
                                        "h"
                                    ],
                                    "properties": {
                                        "x": {
                                            "type": "integer"
                                        },
                                        "y": {
                                            "type": "integer"
                                        },
                                        "w": {
                                            "type": "integer"
                                        },
                                        "h": {
                                            "type": "integer"
                                        }
                                    }
                                },
                                "confidence": {
                                    "type": "number",
                                    "minimum": 0,
                                    "maximum": 1
                                },
                                "type": {
                                    "type": "string",
                                    "enum": [
                                        "face",
                                        "person",
                                        "object"
                                    ]
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}