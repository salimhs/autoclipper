{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["segments"],
  "properties": {
    "segments": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["start", "end", "text", "words"],
        "properties": {
          "start": {
            "type": "number",
            "description": "Segment start time in seconds"
          },
          "end": {
            "type": "number",
            "description": "Segment end time in seconds"
          },
          "text": {
            "type": "string",
            "description": "Full text of the segment"
          },
          "words": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["word", "start", "end"],
              "properties": {
                "word": {
                  "type": "string"
                },
                "start": {
                  "type": "number"
                },
                "end": {
                  "type": "number"
                }
              }
            }
          }
        }
      }
    }
  }
}
